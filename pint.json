{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "braces": {
            "position_after_control_structures": "same"
        },
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        }
    },
    "exclude": ["bootstrap", "storage", "vendor"]
}
